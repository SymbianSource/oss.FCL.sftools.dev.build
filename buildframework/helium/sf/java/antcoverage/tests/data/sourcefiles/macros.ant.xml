<project name="helium-macros" xmlns:au="antlib:org.apache.ant.antunit" xmlns:hlm="http://www.nokia.com/helium">
    <description>Helium Antlib antcoverage. unittests.</description>

    <!-- Macro to execute abld command. Once used in rombuild.ant.xml. -->
    <macrodef name="abldMacro" uri="http://www.nokia.com/helium">
        <attribute name="message" default="Inside abldMacro"/>
        <sequential>
            <echo> @{message} </echo>
        </sequential>
    </macrodef>
    
    <!-- Macro to execute abld command. Once used in rombuild.ant.xml. -->
    <macrodef name="testMacro" uri="http://www.nokia.com/helium">
        <attribute name="message" default="Inside testMacro"/>
        <sequential>
            <echo> @{message} </echo>
        </sequential>
    </macrodef>

</project>




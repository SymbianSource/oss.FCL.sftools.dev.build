    <!-- Zips .loc files into individual packages. -->
    <target name="zip-loc-files">
        <mkdir dir="${temp.loc.dir}" />
        <exec executable="perl" dir="${build.drive}/" failonerror="${failonerror}">
            <arg file="${helium.dir}/tools/publish/get_loc_files.pl" />

            </freemarkerLinks>
            <data expandProperties="yes">
                dbPath: ${project.dir}/../output/all_ido_logs.sqlite
                loginfo: xml(${project.dir}/../data/ido_logs/IDO_lcdo_tb92-ci_MCL.92.64_info.log.xml)
                ant: antProperties()
            </data>
        </fmpp>
    </target>
